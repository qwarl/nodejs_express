<div class="mt-4">
    <div class="row">
        <div class="col-sm-6 col-lg-4">

            {{#each courses}}
            <div class="card card-course-item">
                <a href="/courses/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                        {{!-- tao link chuyen toi chi tiet khoa hoc, kieu nhu http://localhost:3000/courses/responsive-web-design --}}
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Mua khoa hoc</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>